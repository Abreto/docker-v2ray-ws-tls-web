#!/usr/bin/env sh

if [ -z "$1" ] || [ -z "$2" ] || [ -z "$3" ]; then
  echo
  echo "Usage: ./configure <UUID> <host> <your_email>"
  echo
  exit 1
fi


# $1 is UUID, $2 is HOST
sed "s/\[UUID\]/$1/g; s/\[HOST\]/$2/g" config.server.example.json > config.server.json

sed "s/\[UUID\]/$1/g; s/\[HOST\]/$2/g" config.client.example.json > config.client.json

sed "s/\[HOST\]/$2/g; s/\[YOUR_EMAIL\]/$3/g" v2ray-stack.example.yml > v2ray-stack.yml
